<h2>SIGN UP HERE:<h2>

<% if flash[:errors] %>
    <% flash[:errors].each do |error| %>
    <p><%= error %></p>
    <% end %>
<% end %>

<% if flash[:success] %>
    <% flash[:success].each do |msg| %>
    <p><%= msg %></p>
    <% end %>
<% end %>

<h3>
    <form action="<%= users_url %>" method="post">
        <%= auth_token %>
        <label>Email:
            <input type="email" name="user[email]" value="">
        </label>
        <br>
        <label>Password:
            <input type="password" name="user[password]" value="">
        </label>
        <br>
        <input type="submit" value="Create">
    </form>
</h3>